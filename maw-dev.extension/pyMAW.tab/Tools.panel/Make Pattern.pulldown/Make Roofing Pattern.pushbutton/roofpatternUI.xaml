<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roofing Pattern Generator" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        Width="380" SizeToContent="Height"
        Background="White"
        Topmost="True">
    
    <StackPanel Margin="15">

        <!-- 1. PROFILE TYPE SELECTION -->
        <GroupBox Header="Select Profile Type" FontWeight="Bold" Margin="0,0,0,10" BorderThickness="1">
            <StackPanel Margin="10">
                <!-- Corrugated -->
                <RadioButton Name="RadioCorrugated" 
                             GroupName="ProfileType" IsChecked="True" 
                             Checked="RoofType_Changed"
                             Margin="0,0,0,10">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Name="IconCorrugated" Width="24" Height="24" Margin="0,0,8,0" />
                            <TextBlock Text="Corrugated" VerticalAlignment="Center" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
                
                <!-- Trapezoidal -->
                <RadioButton Name="RadioTrapezoidal" 
                             GroupName="ProfileType"
                             Checked="RoofType_Changed"
                             Margin="0,0,0,10">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Name="IconTrapezoidal" Width="24" Height="24" Margin="0,0,8,0" />
                            <TextBlock Text="Trapezoidal" VerticalAlignment="Center" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <!-- Ribbed -->
                <RadioButton Name="RadioRibbed" 
                             GroupName="ProfileType"
                             Checked="RoofType_Changed">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Name="IconRibbed" Width="24" Height="24" Margin="0,0,8,0" />
                            <TextBlock Text="Standing Seam / Ribbed" VerticalAlignment="Center" />
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
            </StackPanel>
        </GroupBox>

        <!-- 2. DIAGRAM AND DIMENSIONS -->
        <GroupBox Name="DimensionsGroup" Header="Dimensions (mm)" FontWeight="Bold" Margin="0,5,0,10" BorderThickness="1">
            <StackPanel Margin="10">
                <!-- Diagram -->
                <Image Name="DiagramImage" Height="150" Margin="0,0,0,15" Stretch="Uniform" />

                <!-- Universal Spacing Input -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Rib Spacing:" VerticalAlignment="Center" FontWeight="SemiBold" />
                    <TextBox Name="SpacingInput" Grid.Column="1" Width="80" Text="76" />
                </Grid>

                <!-- Corrugated Inputs -->
                <StackPanel Name="CorrugatedInputs" Visibility="Visible">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Profile Height:" VerticalAlignment="Center" />
                        <TextBox Name="CorrugatedHeightInput" Grid.Column="1" Width="80" Text="20" />
                    </Grid>
                </StackPanel>

                <!-- Trapezoidal Inputs -->
                <StackPanel Name="TrapezoidalInputs" Visibility="Collapsed">
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Profile Height:" VerticalAlignment="Center" />
                        <TextBox Name="TrapezoidalHeightInput" Grid.Column="1" Width="80" Text="40" />
                    </Grid>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Rib Width (Bottom):" VerticalAlignment="Center" />
                        <TextBox Name="TrapezoidalRibWidthInput" Grid.Column="1" Width="80" Text="70" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Top Width:" VerticalAlignment="Center" />
                        <TextBox Name="TrapezoidalTopWidthInput" Grid.Column="1" Width="80" Text="20" />
                    </Grid>
                </StackPanel>

                <!-- Ribbed Inputs -->
                <StackPanel Name="RibbedInputs" Visibility="Collapsed">
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Profile Height:" VerticalAlignment="Center" />
                        <TextBox Name="RibbedHeightInput" Grid.Column="1" Width="80" Text="50" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Rib Thickness:" VerticalAlignment="Center" />
                        <TextBox Name="RibbedThicknessInput" Grid.Column="1" Width="80" Text="15" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 3. OUTPUTS -->
        <GroupBox Header="Select Outputs" FontWeight="Bold" Margin="0,5,0,10" BorderThickness="1">
            <StackPanel Margin="10">
                <CheckBox Name="CheckNormal" Content="Generate Normal Map" IsChecked="True" Margin="0,0,0,8" />
                <CheckBox Name="CheckBump" Content="Generate Bump Map" IsChecked="True" Margin="0,0,0,8" />
                <CheckBox Name="CheckPattern" Content="Create Revit Model Fill Pattern" IsChecked="False" Margin="0,0,0,8" />
                <CheckBox Name="CheckFillRegion" Content="Create Revit Filled Region Type" IsChecked="False" Margin="0,0,0,8" />
                <CheckBox Name="CheckMaterial" Content="Create Revit Material" IsChecked="False" Margin="0,0,0,0" />
                <Grid Margin="0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Material Shading Color:" FontWeight="Normal" VerticalAlignment="Center" />
                    <Button Name="ColorSwatch"
                            Grid.Column="1"
                            Width="60" Height="25"
                            Click="SelectColor_Click"
                            BorderBrush="Black" BorderThickness="1" />
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- 4. UNITS -->
        <GroupBox Header="Unit of Measurement:" FontWeight="Bold" Margin="0,5,0,10" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton Name="MetricRadioButton" Content="Metric" IsChecked="True" Margin="0" Checked="Unit_Changed" />
                <RadioButton Name="ImperialRadioButton" Content="Imperial" IsChecked="False" Margin="0" Checked="Unit_Changed" />
            </StackPanel>
        </GroupBox>

        <!-- 5. SUBMIT BUTTON -->
        <Button Name="SubmitButton" Content="Generate" 
                Width="120" Height="30" 
                Margin="0,10,0,5" 
                HorizontalAlignment="Center" 
                Click="SubmitButton_Click" />

    </StackPanel>
</Window>

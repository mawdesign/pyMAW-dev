<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Roofing Profile Generator" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F0F0F0">

    <StackPanel Margin="15">
        
        <!-- MAIN LAYOUT GRID -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/> <!-- Roof Types -->
                <ColumnDefinition Width="Auto" MinWidth="250"/> <!-- Dimensions -->
                <ColumnDefinition Width="Auto"/> <!-- Diagram -->
            </Grid.ColumnDefinitions>

            <!-- COLUMN 1: ROOF TYPE SELECTION -->
            <GroupBox Header="Profile Type" Grid.Column="0" Margin="0,0,10,0" Padding="10" FontWeight="Bold">
                <StackPanel>
                    <!-- Corrugated Radio Button -->
                    <RadioButton x:Name="RadioCorrugated" IsChecked="True" GroupName="RoofType" 
                                 Checked="RoofType_Changed">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="IconCorrugated" Width="32" Height="32" Margin="0,0,5,0"/>
                            <TextBlock Text="Corrugated" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Trapezoidal Radio Button -->
                    <RadioButton x:Name="RadioTrapezoidal" GroupName="RoofType" Margin="0,10,0,0"
                                 Checked="RoofType_Changed">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="IconTrapezoidal" Width="32" Height="32" Margin="0,0,5,0"/>
                            <TextBlock Text="Trapezoidal" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </RadioButton>

                    <!-- Ribbed Radio Button -->
                    <RadioButton x:Name="RadioRibbed" GroupName="RoofType" Margin="0,10,0,0"
                                 Checked="RoofType_Changed">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="IconRibbed" Width="32" Height="32" Margin="0,0,5,0"/>
                            <TextBlock Text="Ribbed" VerticalAlignment="Center" FontWeight="Normal"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </GroupBox>

            <!-- COLUMN 2: DIMENSIONS INPUTS -->
            <GroupBox Header="Dimensions (mm)" Grid.Column="1" Margin="0,0,10,0" Padding="10" FontWeight="Bold">
                <StackPanel>
                    <!-- Universal Inputs -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Rib Spacing:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                        <TextBox Grid.Column="1" x:Name="SpacingInput" Text="76" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                    </Grid>

                    <!-- Corrugated Inputs (Visible by default) -->
                    <StackPanel x:Name="CorrugatedInputs" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rib Height:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="CorrugatedHeightInput" Text="20" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                    </StackPanel>

                    <!-- Trapezoidal Inputs (Collapsed by default) -->
                    <StackPanel x:Name="TrapezoidalInputs" Visibility="Collapsed" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Profile Height:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="TrapezoidalHeightInput" Text="40" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rib Width (Bottom):" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="TrapezoidalRibWidthInput" Text="70" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Top Width:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="TrapezoidalTopWidthInput" Text="20" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Ribbed Inputs (Collapsed by default) -->
                    <StackPanel x:Name="RibbedInputs" Visibility="Collapsed" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rib Height:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="RibbedHeightInput" Text="50" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Rib Thickness:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Normal"/>
                            <TextBox Grid.Column="1" x:Name="RibbedThicknessInput" Text="15" Width="80" HorizontalAlignment="Left" FontWeight="Normal"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- COLUMN 3: DIAGRAM -->
            <GroupBox Header="Diagram" Grid.Column="2" Padding="10" FontWeight="Bold">
                <Image x:Name="DiagramImage" Width="200" Height="150" Source="diagram_corrugated.png"/>
            </GroupBox>
        </Grid>

        <!-- OUTPUT SELECTION -->
        <GroupBox Header="Select Outputs" Margin="0,10,0,0" Padding="10" FontWeight="Bold">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <CheckBox x:Name="CheckNormal" Content="Generate Normal Map" IsChecked="True" Margin="5" FontWeight="Normal"/>
                <CheckBox x:Name="CheckBump" Content="Generate Bump Map" IsChecked="True" Margin="5" FontWeight="Normal"/>
                <CheckBox x:Name="CheckPattern" Content="Create Revit Model Fill Pattern" IsChecked="False" Margin="5" FontWeight="Normal"/>
                <CheckBox x:Name="CheckFillRegion" Content="Create Revit Filled Region Type" IsChecked="False" Margin="5" FontWeight="Normal"/>
            </StackPanel>
        </GroupBox>

        <!-- SUBMIT BUTTON -->
        <Button x:Name="SubmitButton" Content="Generate" Width="120" Height="30" Margin="0,15,0,0" FontWeight="Bold" Click="SubmitButton_Click"/>
        
    </StackPanel>
</Window>
